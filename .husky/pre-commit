#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Sync the extension version with monorepo root version before other checks
bun run sync-version

# Explicitly add the VS Code extension package.json if it was updated
git add projects/campfire-vscode-extension/package.json

# Run existing pre-commit checks
bun lint-staged
bun run typecheck
