{
  "autoCloseBefore": ";:.,=}])>\n\t",
  "autoClosingPairs": [
    {
      "open": "{",
      "close": "}"
    },
    {
      "open": "[",
      "close": "]"
    },
    {
      "open": "(",
      "close": ")"
    },
    {
      "open": "'",
      "close": "'",
      "notIn": ["string", "comment"]
    },
    {
      "open": "\"",
      "close": "\"",
      "notIn": ["string", "comment"]
    },
    {
      "open": "`",
      "close": "`",
      "notIn": ["string", "comment"]
    },
    {
      "open": "<<",
      "close": ">>"
    }
  ],
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<<", ">>"]
  ],
  "comments": {
    "lineComment": "//"
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(::\\s*(if|else\\s+if)|<<\\s*(if|elseif|for|switch)\\b).*",
    "decreaseIndentPattern": "^\\s*(::\\s*else\\b|::\\s*end|<<\\s*(else|elseif|endif|endfor|endswitch)\\b)"
  },
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"],
    ["<<", ">>"]
  ]
}
