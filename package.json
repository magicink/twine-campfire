{
  "name": "campfire",
  "version": "1.107.1",
  "private": true,
  "description": "A custom story format for TwineJS that uses Preact.",
  "exports": "./dist/format.js",
  "main": "dist/format.js",
  "module": "dist/format.js",
  "files": [
    "dist"
  ],
  "workspaces": [
    "apps/campfire",
    "apps/storybook",
    "projects/campfire-vscode-extension"
  ],
  "scripts": {
    "build": "bun run sync-version && rimraf apps/campfire/dist && bunx rollup -c apps/campfire/rollup.config.mjs && node build-format.mjs",
    "check-version": "bun run scripts/sync-version.ts --check",
    "prepare": "husky || true",
    "sync-version": "bun run scripts/sync-version.ts",
    "typecheck": "tsc --noEmit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write",
    "projects/campfire-vscode-extension/package.json": "git add"
  },
  "prettier": "@brandontom/prettier",
  "dependencies": {
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat"
  },
  "devDependencies": {
    "@brandontom/prettier": "^2.0.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@happy-dom/global-registrator": "^18.0.1",
    "@types/bun": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "release-please": "^17.1.1",
    "rimraf": "^6.0.1",
    "sort-package-json": "^3.4.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
